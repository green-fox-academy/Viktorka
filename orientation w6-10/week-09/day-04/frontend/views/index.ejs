    }

    .downvote {
        background-image: url("https://github.com/green-fox-academy/Sidhava/blob/master/week-09/day-05/reddit-frontend_next/assets/downvote.png?raw=true");
        color: white;
        background-color: white;
    } */

    aside>button {
        width: 100%;
        height: 4vh;
        text-transform: uppercase;
        background-color: blue;
        color: white;
        font-weight: bold;
        letter-spacing: 0.3vh;
        border: solid 1px blue;
        margin-bottom: 1vh;
    }
    .hide {
        display:none;
    }
</style>

<body>
    <header>
        <h1>SPACE</h1>
    </header>
    <div class="container">
        <main>
            <article>
                <% for (let i=index.length-1; i>= 0; i--) { %>
                <div class="theField">
                    <p>id:<%= index[i].title %> </p>
                    <button class="upvote">upvote</button>
                    <p>Score: <%=index[i].score%></p>
                    <button class="downvote">downvote</button>
                    <p> URL: <a href="<%= index[i].url %>"><%= index[i].url %></a></p>
                    <form class="delete">
                    <p class="hide"> <%=index[i].id%></p>
                        <input type="submit" value="remove post">
                    </form>
                </div>
                <% } %>
            </article>

        </main>
        <aside>
            <button onclick="redirect()">Submit a new post</button>
            <div class="about">
                <h3 class="whatAbout">About</h3>
                <p>Share and discuss</p>
                <li>list 1</li>
                <li>list 2</li>
                <li>list 3</li>
                <li>list 4</li>
            </div>
        </aside>
    </div>
